<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.demo.po.Books" table="books" schema="book">
        <id name="bookid">
            <column name="bookid" sql-type="int(11)"/>
        </id>
        <property name="id">
            <column name="id" sql-type="int(11)"/>
        </property>
        <property name="bookname">
            <column name="bookname" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="writer">
            <column name="writer" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="publish">
            <column name="publish" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="sort">
            <column name="sort" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="booknum">
            <column name="booknum" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>